{% extends 'main/1cols.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 col-xl-4 col-xxl-3 position-fixed top-50 start-50 translate-middle">
            <div class="card shadow">
                <div class="card-header">
                    <h3 class="mb-0">Please sign in</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('user_security_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <label for="username">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="password">Password</label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >


{#                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
{#                        See https://symfony.com/doc/current/security/remember_me.html#}

                        <div class="checkbox mb-3">
                            <input type="checkbox" name="_remember_me" id="_remember_me" class="me-1">
                            <label for="_remember_me">Remember me</label>
                        </div>

                        <div class="d-flex align-items-center justify-content-center gap-2">
                            <button class="btn btn btn-primary" type="submit">
                                Sign in
                            </button>
                            <a href="{{ path('user_registration_register') }}">
                                No account? Register.
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
