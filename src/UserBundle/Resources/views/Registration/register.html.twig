{% extends 'main/1cols.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-4 col-xxl-3 position-fixed top-50 start-50 translate-middle">
            <div class="card shadow">
                <div class="card-header">
                    <h3 class="mb-0">Register</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.lastName) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.plainPassword, {
                            label: 'Password'
                        }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.confirmPassword, {
                            label: 'Confirm password'
                        }) }}
                    </div>

                    <div class="d-flex align-items-center justify-content-center gap-2">
                        <button type="submit" class="btn btn-primary">Register</button>
                        <a href="{{ path('user_security_login') }}">Already have an account? Login.</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_errors(form) }}
        </div>
    </div>
{% endblock %}
